<MudPaper Width="300px">
    <MudText Typo="Typo.h6">Hangar</MudText>

    @foreach (var aircraft in AircraftInHangar)
    {
        <div class="pa-4">
            <div class="d-flex">
                <MudText Typo="Typo.body2">@aircraft.Designation</MudText>
                <MudText Typo="Typo.body2">@aircraft.Name</MudText>
            </div>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       @onclick="(args) => OrderAircraftToFlightDeck(args, aircraft)">
                Send to Flight Deck
            </MudButton>
        </div>
    }
    
</MudPaper>